<%- model_class = Datastructuredefinition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:component) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @datastructuredefinitions.each do |datastructuredefinition| %>
      <tr>
        <td><%= link_to datastructuredefinition.id, datastructuredefinition_path(datastructuredefinition) %></td>
        <td><%= datastructuredefinition.component %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_datastructuredefinition_path(datastructuredefinition), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      datastructuredefinition_path(datastructuredefinition),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_datastructuredefinition_path,
            :class => 'btn btn-primary' %>
