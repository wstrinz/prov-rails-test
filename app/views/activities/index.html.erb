<h1>Listing activities</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Label</th>
    <th>Generated</th>
    <th>Used</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.subject %></td>
    <td><%= activity.label %></td>
    <td>
    <% activity.generated.each do |entity| %>
    <%= link_to(entity, entity.as(Entity)) %>
    <% end %>
    ,
    </td>
    <td><%= activity.used %></td>
    <td><%= link_to 'Show', activity_path_rdf(activity) %></td>

    <td><%= link_to 'Edit', edit_activity_path_rdf(activity) %></td>
    <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

