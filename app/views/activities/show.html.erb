<p id="notice"><%= notice %></p>

<p>
  <b>Subject:</b>
  <%= @activity.subject %>
</p>

<p>
  <b>Label:</b>
  <%= @activity.label %>
</p>

<p>
  <b>Generated:</b>

  <% @activity.generated.each do |entity| %>
  <td><%= link_to(entity, entity_path(entity.to_s[7..-1])) %></td>
  <% end %>

</p>

<p>
  <b>Used:</b>
  <% @activity.used.each do |entity| %>
  <td><%= link_to(entity, entity_path(entity.to_s[7..-1])) %></td>
  <% end %>
</p>


<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
