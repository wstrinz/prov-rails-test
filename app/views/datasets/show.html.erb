<%- model_class = Dataset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:label) %>:</strong></dt>
  <dd><%= @dataset.label %></dd>
  <dt><strong><%= model_class.human_attribute_name(:structure) %>:</strong></dt>
  <dd><%= @dataset.structure %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><b>Export Data</b></dt>
  <dd><%= link_to 'csv', controller: "data", action: "dataset", output_format: 'csv', id: @dataset %></dd>
  <dd><%= link_to 'arff', controller: "data", action: "dataset", output_format: 'arff', id: @dataset %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              datasets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dataset_path(@dataset), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dataset_path(@dataset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
