<h1>Listing entities</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Was generated by</th>
    <th>Was derived from</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entities.each do |entity| %>
  <tr>
    <td><%= entity.subject %></td>
    <td><%= link_to(entity.wasGeneratedBy.to_s, "activities/#{entity.wasGeneratedBy.to_s[6..-1]}") if entity.wasGeneratedBy %></td>
    <td><%= link_to(entity.wasDerivedFrom.first.to_s, entity.wasDerivedFrom.first.as(Entity)) if entity.wasDerivedFrom.first %></td>

    <td><%= link_to 'Show', entity_path(entity.subject.to_s[7..-1]) %></td>
    <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
    <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

